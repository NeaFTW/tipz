- attributes("title") = "Tipz - Signin"

// Page Header
.row
    .col-lg-12
        h1.page-header Se connecter
// /.row
.row
    .col-md-3
    .alert.alert-danger.col-md-6.errorMessage(ng-if='loginError')  {{ loginErrorMessage }}
    .col-md-3
// Projects Row
.row
    .col-md-3
    form.col-md-6.form-signin(name='form', novalidate='')
        label Email
        input.form-control(type='email', name='email', placeholder='email', ng-model='user.email', required='required', autofocus='')
        span(style='color:red', ng-show='form.email.$dirty && form.email.$invalid')
            span(ng-show='form.email.$error.required') L'adresse mail est requise.
            span(ng-show='form.email.$error.email') Adresse email invalide.
        br
        label Mot de passe
        input.form-control(type='password', name='password', placeholder='password', ng-model='user.password', required='required')
        span(style='color:red', ng-show='form.password.$dirty && form.password.$invalid')
            span(ng-show='form.password.$error.required') Le mode de passe est requis.
        hr
        button.btn.btn-lg.btn-primary.btn-block(ng-disabled='form.password.$dirty && form.password.$invalid ||\
    form.email.$dirty && form.email.$invalid ||\
    !user.email || !user.password', ng-click='userConnect(user)', name='connexion') Connexion
    .col-md-3
