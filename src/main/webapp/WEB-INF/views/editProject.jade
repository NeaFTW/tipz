- import com.mongodb.casbah.Imports
-@ val projectName : String
- attributes("title") = "Tipz - Project edit"
-@ val projectDescription : String
-@ val projectAuthor : String
-@ val projectContact : String
-@ val errorMessage : String
-@ val projectId : Int
-@ val isEdit : Int

// Page Header
.row
    .col-lg-12
        h1.page-header Editer un projet

- if (errorMessage != "") {
.row
    .col-md-3
    |
    .alert.alert-danger.col-md-6.errorMessage  #{errorMessage}
    |
    .col-md-3
// Projects Row
- }


.row
    -@ val url : String = "/project/add"
    .col-md-2
    form.col-md-8.portfolio-item(name="form" action=url method="post")
        label Nom du projet
        input.form-control(type="text" name="name" placeholder="Nom du Projet"  required="required" value="#{projectName}" min="1" autofocus="")
        br
        label Description
        textarea.form-control(id="hiddenProjectDescription" placeholder="Description" name="description" required="required" value="#{projectDescription}")
        br
        label Auteur
        input.form-control(type="text" name="author" palceholder="Prenom nom" placeholder="Auteur" required="required" min="1" value="#{projectAuthor}")
        br
        label Contact
        input.form-control(type="email" name="contact" palceholder="email" placeholder="Contact" required="required" min="1" value="#{projectContact}")

        input.btn.btn-lg.btn-primary.btn-block(type="submit" value="Cr√©er le projet")
