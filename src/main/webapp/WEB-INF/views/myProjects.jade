- import com.mongodb.casbah.Imports
- attributes("title") = "Tipz - My projects"
-@ val projectList : List[Imports.DBObject]

// Page Header
.row
    .col-lg-12
        h1.page-header List of my projects

.row
    table.table.table-striped.col-lg-12
        thead
            tr
                th Project
                th Creation date
                th Cumulative amount
        tbody
            - for(proj <- projectList) {
                tr
                    -@ val url : String = "/project/" + proj.get("id").toString.toFloat.toInt + "/edit"
                    td
                        a(href=url) #{proj.get("name")}
                    td
                        p #{proj.get("creationDate")}
                    td
                        p #{proj.get("amount")} â‚¬ / month
            - }